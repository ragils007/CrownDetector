@model ListViewModel
@{
    ViewData["Title"] = "Lista";
}

<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Firs Name</th>
                <th>Last Name</th>
                <th>Id</th>
                <th>Description</th>
                <th>Date of detection</th>
                <th>Photo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var el in Model.ListItems)
            {
                <tr>
                    <td>@el.Imie</td>
                    <td>@el.Nazwisko</td>
                    <td>@el.Pesel</td>
                    <td>@el.Opis</td>
                    <td>@el.Data_po</td>
                    <td><button class="btn btn-info float-right" onclick="showPhoto(this)" data-src="@el.PhotoSrc">Show</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade bd-example-modal-lg show" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="dynamic-content">
                <img id="showImg" src="" class="img-fluid" alt="" />
            </div>
        </div>
    </div>
</div> 

@section Scripts
{
<script>
    function showPhoto(value) {
        let img = value.dataset.src;
        $('#showImg').attr("src", "data:image/png;base64,"+img);
        $('#myModal').modal('show');
    }
</script>
}