@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form asp-action="MakePredictionRequest" asp-controller="Home" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="AttachedFile"></label>
            <input asp-for="AttachedFile" class="form-control-file" />
            <span asp-validation-for="AttachedFile" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary float-right">Wyślij</button>
    </form>
    <p>Wynik:</p>
    @if (Model != null)
    {<p>@Model.Result</p>}
</div>
